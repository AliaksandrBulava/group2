<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="jpa-project">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>by.jmp.module16.domain.Employee</class>
        <class>by.jmp.module16.domain.EmployeeStatus</class>
        <class>by.jmp.module16.domain.Address</class>
        <class>by.jmp.module16.domain.Personal</class>
        <class>by.jmp.module16.domain.Project</class>
        <class>by.jmp.module16.domain.Unit</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/module16"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>